{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "cd backend && npm install",
  "buildCommand": "cd backend && npm run build",
  "functions": {
    "api/index.js": {
      "includeFiles": "backend/dist/**"
    }
  },
  "rewrites": [{ "source": "/(.*)", "destination": "/api/index.js" }]
}
